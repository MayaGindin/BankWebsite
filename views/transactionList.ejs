<table id="transactionTB" class="table table-bordered">
    <thead>
        <tr>
            <th>Date</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Amount</th>
            <th>Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% transactions.forEach(function(transaction) { %>
            <tr>
                <td><%= transaction.createdAt.toLocaleDateString('en-US', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit' }) %></td>
                <td><%= transaction.sender?.username %></td>
                <td><%= transaction.receiver?.username %></td>
                <td>$ <%= transaction.amount %></td>
                <td>
                    <span class="badge <%= transaction.type === 'deposit' ? 'bg-secondary' : 'bg-success' %>"><%= transaction.type %></span>
                </td>
                <td>
                    <a href="/transactions/<%= transaction._id %>" class="btn btn-outline-primary btn-sm">View</a>
                </td>
            </tr>
            
        <% }) %>
    </tbody>
</table>
<script>
    $("#transactionTB").DataTable({
        order: [[0, 'desc']]
    });
</script>